<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mensajero_mapa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fabio.org.serviflash_mensajero.mensajero_mapa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/top">

            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25sp">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="20dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="DATOS DEL PEDIDO"
                                android:gravity="center"
                                android:id="@+id/textoinit"/>

                            <TextView
                                android:layout_below="@+id/textoinit"
                                android:layout_width="match_parent"
                                android:layout_height="20sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-light"
                                android:textSize="16sp"
                                android:text="texto"
                                android:id="@+id/texto"/>

                            <TextView
                                android:layout_below="@+id/texto"
                                android:layout_width="match_parent"
                                android:layout_height="20sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-light"
                                android:textSize="16sp"
                                android:text="texto"
                                android:id="@+id/texto2"/>

                            <TextView
                                android:layout_below="@+id/texto2"
                                android:layout_width="match_parent"
                                android:layout_height="20sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-light"
                                android:textSize="16sp"
                                android:text="texto"
                                android:id="@+id/texto3"/>

                            <TextView
                                android:layout_below="@+id/texto3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-light"
                                android:textSize="16sp"
                                android:text="texto"
                                android:id="@+id/texto4"/>

                            <Button
                                android:layout_marginTop="20sp"
                                android:id="@+id/btnentregado"
                                android:layout_below="@+id/texto4"
                                android:layout_width="140sp"
                                android:layout_marginLeft="105sp"
                                android:layout_height="wrap_content"
                                android:text="Entregado"
                                android:textColor="@color/colortexto"
                                android:textStyle="bold"
                                android:onClick="entregado"
                                android:background="@color/colorPrimary"/>

                        </RelativeLayout>

                    </ScrollView>



                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <!---->

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
